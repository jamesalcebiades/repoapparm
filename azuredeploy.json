{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
        "parameters" : {
        "envPar": {
            "type": "string",
            "defaultValue": "dev",
            "metadata":{
                "description": "The environment."
            }
        },
        "countPar": {
            "type": "string",
            "defaultValue": "001",
            "metadata": {
                "description": "count object."
            }
        },
        "resource_namePar": {
            "type": "string",
            "defaultValue": "rg-gp",
            "metadata": {
                "description": "Resource group name."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "brazilsouth",
            "metadata": {
                "description": "Location for all resources."
            }
        } 

    },

    "variables": {
        "varResourceName" : "[concat(parameters('resource_namePar'),parameters('envPar'),parameters('countPar'))]",
        "varLocation": "[parameters('location')]"
    },
    

    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion" : "2018-05-01",
            "name": "[variables('varResourceName')]",
            "location" : "[variables('varLocation')]",
            "properties" : {}
        }
    ]
  }